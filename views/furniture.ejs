<html>
    <head>
        <style>
        
          th, td {
  padding-top: 5px;
  padding-bottom: 5px;
  padding-left: 5px;
  padding-right: 5px;
}
table {
  border-spacing: 20px;
  position: absolute;
  top: 60px;
}
.tb{
    border: 1px solid black;
    border-collapse: collapse;
}
th{
    border: 1px solid black;
    border-collapse: collapse;
}
td{
    border:1px solid black
}
h1{
    padding-top: 10px;
    background-color: yellow;
    width: 445px;
    border: 2px solid black;
}
        </style>
        <body>
            <table class="tb">
                <h1>Furniture List</h1>
                <tr>
                 <th class="inventory">Inventory_id</th>
                 <th class="type">Inventory Type</th>
                 <th class="name">Item Name</th>
                 <th class="quantity">Available_quantity</th>
                </tr>
            <% for (let i=0;i<furn.length;i++) {%>
                    <tr>
                     <td><%= furn[i].Inventory_id %></td>
                     <td><%= furn[i].InventoryType %></td>
                     <td><%= furn[i].ItemName%></td>
                     <td><%= furn[i].AvailableQuantity %></td>
                    </tr>      
            <% } %>
        </table>
        </body>
    </head>
</html>